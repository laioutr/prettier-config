{
  "$schema": "https://json.schemastore.org/prettierrc",
  "semi": true,
  "tabWidth": 2,
  "trailingComma": "es5",
  "useTabs": false,
  "singleQuote": true,
  "printWidth": 140,
  "bracketSameLine": false,
  "endOfLine": "lf",
  "experimentalTernaries": true,
  "plugins": ["prettier-plugin-tailwindcss"],
  "overrides": [
    {
      "files": ["**/package.json"],
      "options": {
        "plugins": ["prettier-plugin-packagejson"]
      }
    }
  ]
}

